@model HospitalProject.Models.DoctorDetailDto
@{
    ViewBag.Title = "Details";
}
<div class="heading-container">
    <h2>Doctor details:</h2>
    @{
        if (User.IsInRole("Admin"))
        {
            <div class="heading-container">
                <h4 class="mr-sm"><a href="/doctorDetail/Update/@Model.DoctorId" class="btn btn-primary">Update Details</a></h4>
                <h4><a href="/doctorDetail/DeleteConfirmation/@Model.DoctorId" class="btn btn-danger">Delete Doctor</a></h4>
            </div>
        }
    }

</div>


<h3>Name: <i>@Model.DoctorFname @Model.DoctorLname</i></h3>
<p>Designation: <i>@Model.DoctorDesignation</i></p>
<p>Email ID: <i>@Model.DoctorEmail</i></p>

