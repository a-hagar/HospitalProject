
@model HospitalProject.Models.ViewModels.UpdateDoctorDetails

@{
    ViewBag.Title = "Update";
}
<a href="/DoctorDetail/Details/@Model.selectedDoctor.DoctorId" class="btn btn-primary">Go Back</a>
<h2>Update</h2>

<form action="/DoctorDetail/Edit/@Model.selectedDoctor.DoctorId" method="POST">
    <div class="form-group">
        <label for="DoctorFname">First Name:</label>
        <input type="text" name="DoctorFname" class="form-control" value=" @Model.selectedDoctor.DoctorFname" />
    </div>
    <div class="form-group">
        <label for="DoctorLname">Last Name:</label>
        <input type="text" name="DoctorLname" class="form-control" value="@Model.selectedDoctor.DoctorLname" />
    </div>
    <div class="form-group">
        <label for="DoctorDesignation">Designation:</label>
        <input type="text" name="DoctorDesignation" class="form-control" value="@Model.selectedDoctor.DoctorDesignation">
    </div>
    <div class="form-group">
        <label for="DoctorEmail">Doctor Email</label>
        <input type="email" name="DoctorEmail" class="form-control" value="@Model.selectedDoctor.DoctorEmail" />
    </div>

    <div class="form-group">
        <label for="DepartmentId">Department Name</label>
        <select name="DepartmentId" class="form-control">
            @foreach (var department in Model.departmentOptions)
            {
                string selected = "";
                if (department.DepartmentId == Model.selectedDoctor.DepartmentID)
                {
                    selected = "selected";
                }
                <option value="@department.DepartmentId" @selected>@department.DepartmentName</option>
            }

        </select>
    </div>
    <input type="submit" value="Update Doctor" class="btn btn-primary" />

</form>

