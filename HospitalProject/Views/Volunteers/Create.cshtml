@model HospitalProject.Models.Volunteer
@using HospitalProject.Models;
@{
    ViewBag.Title = "Join the Team";
    List<Department> departments = ViewBag.departments;
}

<h2>Volunteer Registration</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <h4>Which department are you planning to volunteer for?</h4>

    <div class="form-group">
        @Html.Label("Name", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-3">
            <span class="form-control">@Model.ApplicationUser.FirstName @Model.ApplicationUser.LastName</span>
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Email", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-3">
            <span class="form-control">@Model.ApplicationUser.Email</span>
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Phone", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-3">
            <span class="form-control">@Model.ApplicationUser.PhoneNumber</span>
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Address", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-3">
            <span class="form-control">@Model.ApplicationUser.Address</span>
        </div>
    </div>


    @foreach (var dept in departments)
    {
        <input type="checkbox" id="@dept.DepartmentID" name="dept" value="@dept.DepartmentID">
        <label for="@dept.DepartmentID">@dept.DepartmentName</label><br>
    }
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Apply" class="btn btn-default" />
        </div>
    </div>
</div>
}

